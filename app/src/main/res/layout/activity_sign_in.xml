<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".sign_in">
<ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_atas_kanan"
        android:layout_alignParentRight="true"

/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_kiri_tengah"
            android:layout_centerVertical="true"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buat Akun"
                android:textSize="25sp"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_bold"
                android:layout_gravity="center"
                android:layout_marginTop="145dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buruan daftarkan akunmu"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13sp"
        />

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="62dp"
                android:layout_marginRight="62dp"
                android:layout_marginTop="36.7dp"
                android:background="@drawable/rounded">

            <EditText
                    android:id="@+id/namaDepan"
                    android:hint="Nama Depan"
                    android:textSize="12sp"
                    android:textColorHint="#A9A9A9"
                    android:textColor="#000000"
                    android:paddingLeft="17dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="text"
                    android:imeOptions="actionNext"
            />
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="62dp"
                android:layout_marginRight="62dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded">

            <EditText
                    android:id="@+id/namaBelakang"
                    android:hint="Nama Belakang"
                    android:textSize="12sp"
                    android:textColorHint="#A9A9A9"
                    android:textColor="#000000"
                    android:paddingLeft="17dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="text"
                    android:imeOptions="actionNext"
            />
            </RelativeLayout>
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="62dp"
                android:layout_marginRight="62dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded">

            <EditText
                    android:id="@+id/NISN"
                    android:hint="NISN"
                    android:textSize="12sp"
                    android:textColorHint="#A9A9A9"
                    android:textColor="#000000"
                    android:paddingLeft="17dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="number"
                    android:imeOptions="actionNext"
            />
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="62dp"
                android:layout_marginRight="62dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded">

            <EditText
                    android:id="@+id/textInputEmail"
                    android:hint="Email"
                    android:textSize="12sp"
                    android:textColorHint="#A9A9A9"
                    android:textColor="#000000"
                    android:paddingLeft="17dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionNext"
            />
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="62dp"
                android:layout_marginRight="62dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded">

            <EditText
                    android:id="@+id/textInputPassword"
                    android:hint="Password"
                    android:textSize="12sp"
                    android:textColorHint="#A9A9A9"
                    android:textColor="#000000"
                    android:paddingLeft="17dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="textPassword"
                    android:imeOptions="actionDone"
            />
        </RelativeLayout>

        <Button
                android:id="@+id/btnSignIn"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/gradient_button"
                android:text="Daftar"
                android:textColor="#ffffff"
                android:fontFamily="@font/poppins_regular"
                android:textAllCaps="false"
                android:layout_gravity="right"
                android:layout_marginRight="62dp"
                android:layout_marginTop="70dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dengan menekan tombol daftar kamu menyetujui"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"/>
       <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
                android:orientation="horizontal"
               android:layout_gravity="center"
               >
           <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Syarat"
                   android:fontFamily="@font/poppins_semibold"
                   android:textColor="#000000"/>
           <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text=" dan"
                   android:fontFamily="@font/poppins_regular"
                   android:textColor="#000000"
           />
           <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text=" Ketentuan"
                   android:textColor="#000000"
                   android:fontFamily="@font/poppins_semibold"
                    />
           <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text=" kami"
                   android:fontFamily="@font/poppins_regular"
                   android:textColor="#000000"
           />
       </LinearLayout>



    </LinearLayout>



</RelativeLayout>