<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".informasidiri"
        android:orientation="vertical">

   <ImageView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
            android:src="@drawable/ic_daftar2"
            android:layout_marginTop="10dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Informasi Pribadi"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:textColor="#000000"
    />
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Depan"
                android:fontFamily="@font/poppins_light"
                android:textSize="12sp"
                android:inputType="text"
                android:id="@+id/namaDepan"
                android:imeOptions="actionNext"
        />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Belakang"
                android:fontFamily="@font/poppins_light"
                android:textSize="12sp"
                android:inputType="text"
                android:id="@+id/namaBelakang"
                android:imeOptions="actionNext"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
    >
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="+62"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="12sp"
                    android:textColorHint="#000000"
            />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="10dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="12sp"
                    android:inputType="number"
                    android:imeOptions="actionNext"
            />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"

            android:background="@drawable/spinoutline"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

       <Spinner
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:id="@+id/spinnerGender"
               android:entries="@array/gender"

       >
       </Spinner>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tanggal Lahir"
                android:fontFamily="@font/poppins_light"
                android:textSize="12sp"
                android:inputType="date"
                android:id="@+id/tglLhr"
                android:imeOptions="actionNext"
        />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pengalaman Kerja"
            android:textColor="#000000"
            android:fontFamily="@font/poppins_regular"
            android:layout_gravity="center"
            android:layout_marginTop= "10dp"
    />

    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
    android:layout_gravity="center">
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/yes_radio"
                android:text="@string/radio_yes"
                android:fontFamily="@font/poppins_regular"

        />
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/no_radio"
                android:text="@string/radio_no"
                android:fontFamily="@font/poppins_regular"

        />

    </RadioGroup>

    <Button
            android:layout_gravity="center_horizontal"
            android:layout_width="160dp"
            android:layout_height="38dp"
            android:background="@drawable/gradient"
            android:text="LANJUT"
            android:textColor="#ffffff"
            android:layout_marginTop="60dp"
            android:id="@+id/btnDaftar2"
    />
</LinearLayout>